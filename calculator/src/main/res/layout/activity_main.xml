<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.liran.lenovo.calculator.MainActivity">


    <LinearLayout
        android:id="@+id/textlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="right|bottom"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linelayout_Con"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="120dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_C"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:gravity="center"
            android:text="C"
            android:textColor="@color/origin"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_del"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:text="del"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_division"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="รท"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_MUL"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="x"
            android:textColor="@color/black"

            android:textSize="30sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linelayout_Con"
        android:orientation="horizontal">

        <GridView
            android:id="@+id/grideview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="90dp"
            android:layout_weight="3"
            android:numColumns="3" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_reuce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackgroundBorderless"

                android:gravity="center"
                android:text="-"
                android:textColor="@color/black"
                android:textSize="60sp" />

            <TextView
                android:id="@+id/tv_sum"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_weight="1"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/black"
                android:textSize="60sp" />

            <Button
                android:id="@+id/btn_equal"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_margin="0dp"
                android:layout_weight="2"
                android:background="@color/origin"
                android:gravity="center"
                android:text="="
                android:textColor="@color/white"
                android:textSize="60sp" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_zero"
            android:layout_width="0dp"
            android:layout_height="88dp"
            android:layout_margin="0dp"
            android:layout_weight="2"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="0"

            android:textColor="@color/black"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tv_point"
            android:layout_width="0dp"
            android:layout_height="88dp"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:gravity="center"
            android:text="."

            android:textColor="@color/black"
            android:textSize="30sp" />

    </LinearLayout>


</RelativeLayout>
